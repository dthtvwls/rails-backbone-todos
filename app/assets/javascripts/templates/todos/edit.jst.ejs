<h1>Edit todo</h1>

<form id="edit-todo" name="todo">
  <div class="field">
    <label for="content"> content:</label>
    <input type="text" name="content" id="content" value="<%= content %>" >
  </div>

  <div class="field">
    <label for="done"> done:</label>
    <input type="text" name="done" id="done" value="<%= done %>" >
  </div>

  <div class="actions">
    <input type="submit" value="Update Todo" />
  </div>

</form>

